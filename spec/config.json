      "command": "will be overridden by a config snippet",
      "subscribers": [
        "a"
        ],
      "interval": 60
    }
  },

  "client": {
    "name": "localhost",
    "address": "127.0.0.1",
    "subscriptions": [
      "a",
      "b"
    ]
  },

  "ssl": {
    "cacert_file": "spec/cacert.pem",
    "cert_file": "spec/cert.pem",
    "key_file": "spec/key.pem"
  }

